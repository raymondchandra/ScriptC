@model Proyek_Informatika.Models.TopikContainer
@{
    ViewBag.Title = "Topik";
}
<script type="text/javascript">
    $("#update").click(function () {
        //alert('click');
        var values = {
            judul: $("#judul").val(),
            deskripsi: $("#deskripsi").val(),
            id: $("#id").val()
        };
        $.post("Home/_UpdateTopik", values, function (data) {
            var windowZ = $("#topikUpdate").data("tWindow");
            windowZ.center().close();
            alert(data);
            //alert('data');
        });
        //alert('load');
        $('#content').load('Home/TopikAdmin');
    })
</script>
@using (Html.BeginForm())
{
    <div class="container_15">
        @Html.HiddenFor(m => m.id)
        <div class="editor-label grid_15">
            @Html.LabelFor(m => m.judul)
        </div>
        <br class="clear" />
        <div class="editor-field grid_15">
            @Html.TextBoxFor(m => m.judul, new { @class = "grid_15" })
            @Html.ValidationMessageFor(m => m.judul)
        </div>
        <br class="clear" />
        <div class="editor-label grid_15">
            @Html.LabelFor(m => m.deskripsi)
        </div>
        <br class="clear" />
        <div class="editor-field grid_15">
            @Html.TextAreaFor(m => m.deskripsi, new { @class = "grid_15" })
            @Html.ValidationMessageFor(m => m.deskripsi)
        </div>
        <br class="clear" />
        <div class="button-block grid_15">
            <input type="button" id="update" value="Save" class="t-button t-state-default" /></div>
    </div>
}
