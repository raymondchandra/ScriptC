@model Proyek_Informatika.Models.TopikView
@{
    ViewBag.Title = "Topik";
}

    @Html.ValidationSummary(true, "Registrasi topik tidak berhasil. Tolong perbaiki kesalahan dan coba lagi.")
    @using (Html.BeginForm())
    {
        <br />
        <div>
            <fieldset>
                <legend>Topik</legend>
                <div class="editor-label">
                    @Html.LabelFor(m => m.judul)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.judul, new { style = "width:100%;" })
                    <br />@Html.ValidationMessageFor(m => m.judul)<br />
                </div>
                <div class="editor-label">
                    @Html.LabelFor(m => m.deskripsi)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(m => m.deskripsi, new { style = "width:100%; height:200px" })
                    <br />@Html.ValidationMessageFor(m => m.deskripsi)<br />
                </div>  
                <div class="editor-label">
                    @Html.LabelFor(m => m.keterangan)
                </div>
                <div class="editor-field">
                     @Html.TextBoxFor(m => m.keterangan, new { style = "width:100%;" })
                    <br />@Html.ValidationMessageFor(m => m.keterangan)<br />
                </div>                
                    <br /> <input type="submit" value="Save" class="t-button t-state-default"/>  
                <div class="editor-field">
                    @Html.HiddenFor(m => m.id)
                </div>                  
            </fieldset>
        </div>
    }


