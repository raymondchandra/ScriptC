@model Proyek_Informatika.Models.TopikContainer
@{
    ViewBag.Title = "Topik";
}
<script type="text/javascript">
    $("#update").click(function () {
        //alert('click');
        var values = {
            judul: $("#judul").val(),
            deskripsi: $("#deskripsi").val(),
            id: $("#id").val()
        };
        $.post("Home/_UpdateTopik", values, function (data) {
            var windowZ = $("#topikUpdate").data("tWindow");
            windowZ.center().close();
            alert(data);
            //alert('data');
        });
        //alert('load');
        $('#content').load('Home/TopikAdmin');
    })
</script>
@using (Html.BeginForm())
{
    <br />
    <div>
        <fieldset>
            <legend>Edit Topik</legend>
            <div class="editor-label">
                @Html.LabelFor(m => m.judul)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.judul, new { style = "width:100%;" })
                <br />@Html.ValidationMessageFor(m => m.judul)<br />
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.deskripsi)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(m => m.deskripsi, new { style = "width:100%; height:150px" })
                <br />@Html.ValidationMessageFor(m => m.deskripsi)<br />
            </div>
            <div class="editor-field">
                @Html.HiddenFor(m => m.id)
            </div>
            <input type="button" id="update" value="Save" class="t-button t-state-default" />
        </fieldset>
    </div>
}
