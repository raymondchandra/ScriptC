@{
    ViewBag.Title = "Topik";
}
<div class="layer">
    <h1>
        Topik</h1>
    <fieldset>
        <legend>Tambah Topik</legend>
        <table>
            <tr>
                <td>
                    Topik
                </td>
                <td>
                    :
                </td>
                <td>
                    <input type="text" style="width: 500px" />
                </td>
            </tr>
        </table>
        <input type="submit" value="Register" class="t-button t-state-default" />
    </fieldset>
    <br>
    @{ 
        GridEditMode mode = GridEditMode.InLine;
        GridButtonType type = GridButtonType.Image;    
    }
    @(Html.Telerik().Grid<Proyek_Informatika.Models.Topik>()
        .Name("Topik")
                .DataKeys(keys =>
                {
                    keys.Add(p => p.id);
                })
        .DataBinding(dataBinding => dataBinding.Ajax()
                                    .Select("_SelectTopik", "Home")
                                            .Insert("_InsertTopik", "Home")
                                            .Update("_SaveTopik", "Home")
                                            .Delete("_DeleteTopik", "Home"))
        .Columns(columns =>
        {
            columns.Bound(o => o.Nama).Width(450).Title("Topik");
            columns.Bound(o => o.Pembimbing).Width(200).Title("Pembimbing");
            columns.Bound(o => o.Keterangan).Width(150).Title("Keterangan");
            columns.Command(commands =>
            {
                commands.Edit().ButtonType(type);
                commands.Delete().ButtonType(type);
            }).Width(80).Title("");
        })
        .Editable(editing => editing.Mode(mode))
               .Pageable(p => p.PageSize(15))
                .Sortable()
                 .Filterable()
                     .Scrollable(c => c.Enabled(true))
                .Selectable()
                .Groupable()
)
    @section HeadContent {
        <style type="text/css">
    /* validators */
    .field-validation-error
    {
        position: absolute;
        display: block;
    }
    
    * html .field-validation-error { position: relative; }
    *+html .field-validation-error { position: relative; }
    
    .field-validation-error span
    {
        position: absolute;
        white-space: nowrap;
        color: red;
        padding: 17px 5px 3px;
        background: transparent url('@Url.Content("~/Content/Common/validation-error-message.png") ') no-repeat 0 0;
    }
    
    /* in-form editing */
    .t-edit-form-container
    {
        width: 350px;
        margin: 1em;
    }
    
    .t-edit-form-container .editor-label,
    .t-edit-form-container .editor-field
    {
        padding-bottom: 1em;
        float: left;
    }
    
    .t-edit-form-container .editor-label
    {
        width: 30%;
        text-align: right;
        padding-right: 3%;
        clear: left;
    }
    
    .t-edit-form-container .editor-field
    {
        width: 60%;
    }
</style>
    }
</div>
