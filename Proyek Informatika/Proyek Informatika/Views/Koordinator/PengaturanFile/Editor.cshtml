
<h1>EditorPengumpulan</h1>
@model Proyek_Informatika.Models.file
@using Proyek_Informatika.Utilities

<script type = "text/javascript">
    var nameFile;
    $("#btn_edit").click(function () {
        if(nameFile == null || nameFile == "")
        {
            alert("Belum ada file yang terunggah");
            return;
        }
        var values = {
            id: @(Model.id_file),
            nama: $("#jenis_file2").val(),
            path: nameFile
        };
        $.post("PengaturanFile/EditFile", values, function (data) {
            if (data == 0) {
                alert("File gagal diubah");
            }
            else if (data == 1) {
                alert("File berhasil diubah");
            }
            $(".t-grid .t-refresh").trigger('click');
            closeWindow();
        });
        
    });
    function onCom(e) {
        nameFile = e.files[0].name;
        console.log(e.files[0].name);

    }
    function onRemove(e) {
        var r = confirm("Apakah anda yakin?");
        if (r) {
            nameFile = "";
            var values = {
            id: @(Model.id_file),
            nama: $("#jenis_file2").val(),
            path: nameFile
        };
        $.post("Pengumpulan/EditFile", values, function (data) {
            if (data == 0) {
                alert("File gagal terhapus");
            }
            else if (data == 1) {
                alert("File berhasil terhapus");
            }

        });
            return true;
        } else {
            e.preventDefault();
            return false;
        }
    }

    $(document).ready(function () {

        
        var $fileList, $files, item, _fn, _i, _len;

        $fileList = $("#existing-files");

        if ($fileList.length > 0) {
            $("#filemahasiswa .t-upload").append($fileList);
            $files = $(".t-file");
            _fn = function (item) {
                var $item, fileId, filenames;
                $item = $(item);
                fileId = $item.data("att-id");
                filenames = [
                          {
                              name: fileId
                          }
                        ];
                return $item.data("fileNames", filenames);
            };
            for (_i = 0, _len = $files.length; _i < _len; _i++) {
                item = $files[_i];
                _fn(item);
            }
            $fileList.show();
        }
        nameFile = '@Model.path';

    });
</script>

<div class = "layer">
<label id="result"></label>
@Html.Label("Nama File :")
<br />
<input type = "text" id= "jenis_file2" value = "@(Model.nama_file)"/>
<br/>

<div class="t-widget t-upload" id = "filemahasiswa">
@Html.Label("File :")
@(Html.Telerik().Upload()
        .Name("attachments")
        .Multiple(false)
        .Async(async => async
            .Save("Save", "Upload", "attachments", new { dir = "FileSharing" })
            .Remove("Remove", "Upload", new { dir = "FileSharing" })
            .AutoUpload(true)
            )
        .ClientEvents(c => c
                    .OnSuccess("onCom")
                    .OnRemove("onRemove")
                    )
)
    <div class="controls" >
		@{
            if (!string.IsNullOrWhiteSpace(Model.path))
            {
                <ul id="existing-files" class="t-upload-files t-reset" style="display: none;">
				<li class="t-file" data-att-id="@(Model.path)">
				<span class="t-icon t-success">uploaded</span>
				<span class="t-filename" title="@(Model.path)">@(Model.path)
				<span class="t-progress"><span class="t-state-selected t-progress-status" style="width: 100%;"></span></span></span><button type="button" class="t-button t-button-icontext t-upload-action"><span class="t-icon t-delete"></span>Remove</button></li></ul>
            }
        }                   
	</div>
    </div>
<input type = "button" id = "btn_edit" value ="Edit" />

               

</div>