<script type="text/javascript" charset="utf-8">


    function init() {
        scheduler.config.multi_day = true;
        scheduler.config.fix_tab_position = false; // tabs are positioned correctly, no need to fix it
        scheduler.config.minicalendar.mark_events = false; // events won't be marked on minicalendar
        scheduler.config.full_day = true;
        scheduler.config.xml_date = "%Y-%m-%d %H:%i";
        //label
        scheduler.locale.labels.section_text = 'Title';
        scheduler.locale.labels.section_description = 'Description';
        scheduler.locale.labels.section_mahasiswa = 'Mahasiswa';
        scheduler.locale.labels.section_pembimbing = 'Pembimbing';
        scheduler.locale.labels.section_penguji1 = 'Penguji 1';
        scheduler.locale.labels.section_penguji2 = 'Penguji 2';
        scheduler.locale.labels.section_place = 'Tempat';

        scheduler.attachEvent("onBeforeLightbox", function (event_id) {
            var configLb = [
			            { name: "text", height: 30, map_to: "text", type: "textarea", focus: true },
                        { name: "mahasiswa", height: 30, map_to: "mahasiswa", type: "textarea" },
                        { name: "pembimbing", height: 30, map_to: "pembimbing", type: "template" },
                        { name: "penguji1", height: 30, map_to: "penguji1", type: "combo" },
                        { name: "penguji2", height: 30, map_to: "penguji2", type: "combo" },
                        { name: "place", height: 30, map_to: "place", type: "combo" },
                        { name: "description", height: 75, map_to: "description", type: "textarea" },
                        { name: "time", height: 72, type: "calendar_time", map_to: "auto" }
		            ];
            scheduler.config.lightbox.sections = configLb;
            scheduler.resetLightbox(); // resetting lightbox to apply new section label
            return true; // lightbox will be displayed
        });


        scheduler.init('scheduler_here', new Date(), "week");
        //        $.post("Kalendar/Data", "", function (data) {
        //            scheduler.parse(JSON.stringify(data), "json");
        //        });

        //        var dp = new dataProcessor("/Kalendar/Save");

        //        dp.setTransactionMode("POST", false);
        //        dp.enableDataNames(true);
        //        dp.init(scheduler);
    }


    $(document).ready(function () {
        init();

    });


</script>

