@{
    ViewBag.Title = "Koordinator_PengumpulanFile";
}
<script src="../../../Scripts/jquery-1.9.1.js" type="text/javascript"></script>
    <script src="../../../Scripts/jquery-ui.js" type="text/javascript"></script>
    <script type = "text/javascript">
        $(function(){
            $("#tool_pengumpulanfile").dialog({
                autoOpen: false,
                width: 800,
                show: {
                    effect: "blind",
                    duration: 1000
                },
                hide: {
                    effect: "explode",
                    duration: 1000
                }
            });
            $("#btn_buka_file").click(function () {
                $("#tool_pengumpulanfile").dialog("open");
            });
    </script>

<div class="layer">
    <h1>Rekap Pengumpulan File</h1>

<table>
    <tr>
        <th>NPM</th>
        <th>Nama</th>
        <th>Topik</th>
        <th>Tipe</th>
        <th>Buka</th>
    </tr>
    <tr>
        <td>2010730020</td>
        <td>Mawar</td>
        <td>Pengenalan Pola</td>
        <td>Skripsi 1</td>
        <td><input type="button" title="Lihat" value="Lihat" /></td>
    </tr>
    <tr>
        <td>2010730017</td>
        <td>Melati</td>
        <td>Jaringan Nirkabel</td>
        <td>Skripsi 2</td>
        <td><input type="button" value="Lihat" title="Lihat" /></td>
    </tr>

</table>

<div id="tool_pengumpulanfile">
    <input type = "button" value="Tambahkan" />
    @(Html.Telerik().Grid<Proyek_Informatika.Models.KoordinatorPengumpulanFile>()
        .HtmlAttributes(new { style = "width:695px" })
        .Name("Pengumpulan")
        .DataKeys(keys =>
        {
            keys.Add(p => p.dokumen);
        })
        
            
            .DataBinding(dataBinding =>
            {
                dataBinding.Ajax()
                    .Select("_SelectAjaxEditing", "User")
                    .Delete("_DeleteAjaxEditing", "User");
            })
            
        
        .Columns(columns =>
        {
            columns.Command(commands => commands.Delete()).Width(40).Title("Unduh");
            columns.Bound(o => o.dokumen).Width(150).Title("Nama Dokumen");
            columns.Bound(o => o.waktuKumpul).Width(150).Title("Waktu Pengumpulan");
            columns.Bound(o => o.batasKumpul).Width(150).Title("Batas Pengumpulan");
        })
        //.ClientEvents(
        //    events => events
        //        .OnComplete("OnComplete") --> popup window
        //)
        .Pageable(p => p.PageSize(15))
        .Sortable()
        .Filterable()
        //.Editable(editing => editing.Mode(GridEditMode.PopUp))
        .Scrollable(c => c.Enabled(true))
        .Selectable(c =>c.Enabled(true))
        .Groupable()
)
</div>
</div>