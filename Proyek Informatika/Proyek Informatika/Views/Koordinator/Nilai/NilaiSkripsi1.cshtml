            @(Html.Telerik().Grid<Proyek_Informatika.Models.KoordinatorPenilaian>()
                .Name("Grid")
                .Columns(columns =>
                {
                    columns.Bound(o => o.npm).Width(100);
                    columns.Bound(o => o.nama).Width(100);
                    columns.Bound(o => o.judul).Width(200);
                    columns.Bound(o => o.nilaiAkhir).Width(70);
                     columns.Command(commands => commands
                                .Custom("viewDetails")
                                .Text("Detail Nilai")
                                //.DataRouteValues(route => route.Add(o => o.id).RouteKey("id"))
                                .Ajax(true))
                                //.Action("_SelectDetailSkripsi1", "Nilai"))
                            .HtmlAttributes(new { style = "text-align: center" })
                            .Width(150);
                })
                .ClientEvents(events => events.OnCommand("viewDetails"))
                .DataBinding(dataBinding => dataBinding.Ajax().Select("_SelectNilaiSkripsi1", "Nilai"))
                .Pageable()
                .Sortable()
                .Filterable()
            )

            @(Html.Telerik().Window()
                .Name("Details")
