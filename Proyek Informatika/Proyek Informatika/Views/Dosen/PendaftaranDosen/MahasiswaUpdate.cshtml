@model Proyek_Informatika.Models.MahasiswaContainer
@{
    ViewBag.Title = "Topik";
}
<script type="text/javascript">
    $("#save").click(function () {
        var values = {
            NPM: $("#NPM").val(),
            topik: $("#topik").val(),
            idSkripsi: $("#idSkripsi").val()
        };
        $.post("PendaftaranDosen/_UpdateMahasiswa", values, function (data) {
            var windowZ = $("#mahasiswaUpdate").data("tWindow");
            windowZ.center().close();
            alert(data);
        });
        $('#content').load('PendaftaranDosen/RegistrasiMahasiswa');
    })
</script>

    @using (Html.BeginForm())
    {
        
        <div>
            <fieldset>
                <legend>Mahasiswa</legend>
                <div class="editor-label">
                    @Html.LabelFor(m => m.NPM)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.NPM, new { style = "width:100%;" })
                    <br />@Html.ValidationMessageFor(m => m.NPM)<br />
                </div>
                <div class="editor-label">
                    @Html.LabelFor(m => m.topik)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.topik, new { style = "width:100%;" })
                    <br />@Html.ValidationMessageFor(m => m.topik)<br />
                </div>                
                    <input type="button" id="save" value="Save" class="t-button t-state-default"/>  
                <div class="editor-field">
                    @Html.HiddenFor(m => m.idSkripsi)
                </div>  
            </fieldset>
        </div>
    }


