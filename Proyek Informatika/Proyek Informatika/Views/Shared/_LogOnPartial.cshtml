@{
    var semester=(string)Session["semester"];
}
@if(Request.IsAuthenticated) {
    var login = (string)Session["role"]; 
    
    <text>@Html.ActionLink("[ Log Off ]", "LogOff", "Account")
    <br/>
    <br/><strong>@User.Identity.Name</strong> - @login
    <br/>@semester</text>
}
else {
    <text>@Html.ActionLink("[ Log On ]", "LogOn", "Account")
    <br/>
    <br/>
    <br/>@semester</text>
}
