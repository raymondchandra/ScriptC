@model Proyek_Informatika.Models.LogOnModel
@{
    ViewBag.Title = "Log On";
}    
<div class="layer">
    <h1>
        Log On</h1>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @using (Html.BeginForm())
    {      
        <fieldset>
            <legend>Informasi Account</legend>
            <div class="editor-label grid_15">
                @Html.LabelFor(m => m.UserName)
            </div>
            <br class="clear" />
            <div class="editor-field grid_15">
                @Html.TextBoxFor(m => m.UserName, new { @class = "grid_6" }) <span class="warning">@Html.ValidationMessageFor(m => m.UserName)</span>
            </div>
            <br class="clear" />
            <div class="editor-label grid_15">
                @Html.LabelFor(m => m.Password)
            </div>
            <br class="clear" />
            <div class="editor-field grid_15">
                @Html.PasswordFor(m => m.Password, new { @class = "grid_6" }) <span class="warning">@Html.ValidationMessageFor(m => m.Password)</span>
            </div>
            <div class="editor-label" style="display: none;">
                @Html.CheckBoxFor(m => m.RememberMe) @Html.LabelFor(m => m.RememberMe)
            </div>
            <br class="clear" />
            <div class="button-block grid_15">
                <input type="submit" value="Log On" class="t-button t-state-default" />
            </div>
        </fieldset>     
    }    
    <span class="warning">@Html.ValidationSummary(true, "Log on belum berhasil. Mohon perbaiki kesalahan dan coba lagi.")</span>
</div>
